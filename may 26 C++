// WAP to input percent of the students and display grade according to the percentage & (percentage should not support gretaer than 100 and less than 0).
//Wap to create a simple calculators using switch case statement where + for addition - for substraction * for multiply and / for divsion .


 #include<iostream>
using namespace std;
int main()
{
 
    float per;
    
    
     
    cout<<"Percentage"<<endl;
    
    
        cout<<"Enter the percentage of student "<< endl;
        cin>>per;
     
    if(per>=0 && per<=100)
    {
    	   if(per<=100 && per>=90)
     {
     	cout<<"Grade: A+ "<<endl;
	 }
	 else if(per<90 && per>=80)
	 {
	 	cout<<"Grade : A"<<endl; 
	 }
	 
	 else if(per<80 && per>=70)
	 {
	 	cout<<"Grade : B+"<<endl;
	 	
	 }
	 else if(per<70 && per>=60)
	 {
	 	cout<<"Grade : B"<<endl;
	}
	else if(per<60 && per>=50)
	 {
	 	cout<<"Grade : C+"<<endl;
   
}
else if(per<50 && per>=40)
	 {
	 	cout<<"Grade : C"<<endl;
	 }
	 else if(per<40 && per>0)
	 {
	 	cout<<"You are failed & Grade :D+"<<endl;
	 }
	 
	 else
	 cout<<"Invalid percentage! Please Enter the percentage from  0 and 100"<<endl;
	 
}

return 0;
}
